generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Car{
  id Int @id @default(autoincrement())
  brand String //Marca do carro
  model String //Modelo do carro
  color String //Ano de fabricação
  year_manufacture Int
  imported Boolean @default(false) //Importado
  plates String //Placa
  selling_date DateTime? //Data de venda
  selling_price Decimal? //Preço de venda
}

model User{
  id Int @id @default(autoincrement())
  fullname String
  email String
  password String
  is_admin Boolean @default(false)
}

model Customer{
  id Int @id @default(autoincrement())
  name String
  ident_document String
  brith_date DateTime? // "1991-04-26T00:00:00Z"
  street_name String
  house_number String
  complements String?
  municipality String
  state String
  phone String
  email String
}